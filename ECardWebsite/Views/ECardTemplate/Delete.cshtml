@{
}
@model ECardWebsite.Models.ECardTemplate

@{
    ViewData["Title"] = "Delete eCard Template";
}

<h1>Delete eCard Template</h1>

<h3>Are you sure you want to delete this eCard template?</h3>
<div>
    <h4>@Model.Title</h4>
    <dl class="row">
        <dt class="col-sm-2">Title</dt>
        <dd class="col-sm-10">@Model.Title</dd>
        <dt class="col-sm-2">Description</dt>
        <dd class="col-sm-10">@Model.Description</dd>
        <dt class="col-sm-2">Image URL</dt>
        <dd class="col-sm-10">@Model.ImageUrl</dd>
        <dt class="col-sm-2">Category</dt>
        <dd class="col-sm-10">@Model.Category?.Name</dd>
        <dt class="col-sm-2">Created At</dt>
        <dd class="col-sm-10">@Model.CreatedAt.ToString("yyyy-MM-dd")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TemplateId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>