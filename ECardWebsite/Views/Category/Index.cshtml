@{
}
@model IEnumerable<ECardWebsite.Models.Category>

@{
    ViewData["Title"] = "Manage Categories";
}

<h1>Manage Categories</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Category</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var category in Model)
        {
            <tr>
                <td>@category.Name</td>
                <td>
                    <a asp-action="Edit" asp-route-categoryId="@category.CategoryId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-categoryId="@category.CategoryId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>