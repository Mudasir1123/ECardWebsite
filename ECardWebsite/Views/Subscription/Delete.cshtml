@{
}
@model ECardWebsite.Models.Subscription

@{
    ViewData["Title"] = "Delete Subscription";
}

<h1>Delete Subscription</h1>

<h3>Are you sure you want to delete this subscription?</h3>
<div>
    <h4>Subscription for @Model.User?.Username</h4>
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?.Username</dd>
        <dt class="col-sm-2">Email List</dt>
        <dd class="col-sm-10">@Model.EmailList</dd>
        <dt class="col-sm-2">Offer</dt>
        <dd class="col-sm-10">@(Model.Offer != null ? Model.Offer.Title : "None")</dd>
        <dt class="col-sm-2">Start Date</dt>
        <dd class="col-sm-10">@Model.StartDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">End Date</dt>
        <dd class="col-sm-10">@Model.EndDate.ToString("yyyy-MM-dd")</dd>
        <dt class="col-sm-2">Active</dt>
        <dd class="col-sm-10">@(Model.IsActive ? "Yes" : "No")</dd>
        <dt class="col-sm-2">Payment Verified</dt>
        <dd class="col-sm-10">@(Model.PaymentVerified ? "Yes" : "No")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SubscriptionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>