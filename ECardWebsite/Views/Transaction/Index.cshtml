@{
}
@model IEnumerable<ECardWebsite.Models.Transaction>

@{
    ViewData["Title"] = "Manage Transactions";
}

<h1>Manage Transactions</h1>

<p>
    <a asp-action="Create" class="btn btn-success">Create New Transaction</a>
</p>

<table class="table table-striped">
    <thead>
        <tr>
            <th>User</th>
            <th>Template</th>
            <th>Recipient Email</th>
            <th>Subject</th>
            <th>Message</th>
            <th>Sent At</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var transaction in Model)
        {
            <tr>
                @* <td>@transaction.User?.Username</td> *@
                <td>@transaction.Template?.Title</td>
                <td>@transaction.RecipientEmail</td>
                <td>@transaction.Subject</td>
                <td>@transaction.Message</td>
                <td>@transaction.SentAt.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Edit" asp-route-transactionId="@transaction.TransactionId" class="btn btn-primary btn-sm">Edit</a>
                    <a asp-action="Delete" asp-route-transactionId="@transaction.TransactionId" class="btn btn-danger btn-sm">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>