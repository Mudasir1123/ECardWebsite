@{
}
@model ECardWebsite.Models.Transaction

@{
    ViewData["Title"] = "Delete Transaction";
}

<h1>Delete Transaction</h1>

<h3>Are you sure you want to delete this transaction?</h3>
<div>
    @* <h4>Transaction from @Model.User?.Username</h4> *@
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        @* <dd class="col-sm-10">@Model.User?.Username</dd> *@
        <dt class="col-sm-2">Template</dt>
        <dd class="col-sm-10">@Model.Template?.Title</dd>
        <dt class="col-sm-2">Recipient Email</dt>
        <dd class="col-sm-10">@Model.RecipientEmail</dd>
        <dt class="col-sm-2">Subject</dt>
        <dd class="col-sm-10">@Model.Subject</dd>
        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.Message</dd>
        <dt class="col-sm-2">Sent At</dt>
        <dd class="col-sm-10">@Model.SentAt.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="TransactionId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>