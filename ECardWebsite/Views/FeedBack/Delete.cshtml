@{
}
@model ECardWebsite.Models.Feedback

@{
    ViewData["Title"] = "Delete Feedback";
}

<h1>Delete Feedback</h1>

<h3>Are you sure you want to delete this feedback?</h3>
<div>
    <h4>Feedback from @Model.User?</h4>
    <dl class="row">
        <dt class="col-sm-2">User</dt>
        <dd class="col-sm-10">@Model.User?</dd>
        <dt class="col-sm-2">Message</dt>
        <dd class="col-sm-10">@Model.Message</dd>
        <dt class="col-sm-2">Submitted At</dt>
        <dd class="col-sm-10">@Model.SubmittedAt.ToString("yyyy-MM-dd HH:mm")</dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="FeedbackId" />
        <button type="submit" class="btn btn-danger">Delete</button>
        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
    </form>
</div>